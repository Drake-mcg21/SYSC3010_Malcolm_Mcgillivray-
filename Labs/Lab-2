#using the emulated sense hat

import sense_emu
from sense_emu import SenseHat

sense = SenseHat()

red = (255,0,0)
white = (255,255,255)

while True:
    humidity = sense.humidity
    humidity_value = 64 * humidity / 100
    pixels= [red if i < humidity_value
                 else white for i in range(64)]
    
    sense.set_pixels(pixels)
